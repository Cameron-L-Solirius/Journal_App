<div class="ps-3">
    <h1>Your Saved Investments</h1>
    
    <div class="container">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Rate (£)</th>
                    <th scope="col">Monthly Contribution (£)</th>
                    <th scope="col">Initial Deposit (£)</th>
                    <th scope="col">Duration (Years)</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                    <th scope="col">View Graph</th>
                </tr>
            </thead>

            <tbody>
                <% @investments.each do |investment| %>
                    <tr>
                    <th scope="row"><%= investment.name %></th>
                        <td><%= investment.rate %></td>
                        <td><%= investment.monthly_contribution %></td>
                        <td><%= investment.initial_deposit %></td>
                        <td><%= investment.duration %></td>
                        <td><span class="d-flex align-items-center justify-content-center"><%= button_to "Edit" %></span></td>
                        <td><span class="d-flex align-items-center justify-content-center"><%= button_to "Delete" %></span></td>
                        <td><span class="d-flex align-items-center justify-content-center"><%= button_to "Graph" %></span></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>

    <div class="d-flex align-items-center justify-content-center">
        <span class="me-3"><%= button_to "Compare Investments" %></span>
        <span class="me-3"><%= button_to 'Add Investment', investments_path, method: :get %></span>
    </div>
</div>
