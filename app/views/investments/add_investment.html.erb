<h1 class="ps-3">Add Investment</h1>

<span class="h-100 d-flex align-items-center justify-content-center">
  <%= form_with(model: @investment) do |form| %>

  <table class="table table-striped table-bordered">
    <tbody>
      <tr>
        <td><%= form.label :name %></td>
        <td><%= form.text_field :name %></td>
      </tr>

      <tr>
        <td><%= form.label :initial_deposit %></td>
        <td><%= form.number_field :initial_deposit %></td>
      </tr>

      <tr>
        <td><%= form.label :monthly_contribution %></td>
        <td><%= form.number_field :monthly_contribution %></td>
      </tr>

      <tr>
        <td><%= form.label :rate %></td>
        <td><%= form.number_field :rate %></td>
      </tr>

      <tr>
        <td><%= form.label :duration %></td>
        <td><%= form.number_field :duration %></td>
      </tr>
    </tbody>
  </table>

  <span class="h-100 d-flex align-items-center justify-content-center">
    <%= form.submit %>
    <%= button_to "Index page", investments_path, method: :get %>
  </span>
  <% end %>
</span>