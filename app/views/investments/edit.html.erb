<div class="d-flex custom-centered">
  <span>
    <h1>Edit Investment</h1>

    <%= form_with(model: @investment, url: investment_path(@investment), method: :patch) do |form| %>
<table class="table table-striped table-bordered">
    <tbody>
      
      <thead class="table-dark">
        <tr>
          <th scope="col">Investment Details</th>
          <th scope="col">Value</th>
        </tr>
      </thead>
      
      <tr>
        <td><%= form.label :name %></td>
        <td><%= form.text_field :name %></td>
      </tr>

      <tr>
        <td><%= form.label :initial_deposit %></td>
        <td><%= form.number_field :initial_deposit, :step => "0.01" %></td>
      </tr>

      <tr>
        <td><%= form.label :monthly_contribution %></td>
        <td><%= form.number_field :monthly_contribution, :step => "0.01" %></td>
      </tr>

      <tr>
        <td><%= form.label :rate %></td>
        <td><%= form.number_field :rate, :step => "0.01" %></td>
      </tr>

      <tr>
        <td><%= form.label :duration %></td>
        <td><%= form.number_field :duration %></td>
      </tr>
    </tbody>
  </table>

      <div class="d-flex custom-centered">
        <%= form.submit "Update Investment" %>
      </div>
    <% end %>
</span>
</div>